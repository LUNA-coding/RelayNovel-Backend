// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  createAt DateTime @default(now())
  Profile Profile?
  @@map("users")
}

model Profile {
  id String @id
  user User @relation(fields: [id], references: [id])
  username String
  name String
  Password Password?
}
model Password {
  id String @id
  User Profile @relation(fields: [id], references: [id])
  hashPassword String
  salt String
}

model Contents {
  id String @id
  keyword String
  description String
}
